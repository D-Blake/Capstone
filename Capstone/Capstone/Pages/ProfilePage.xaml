<Page x:Class="Capstone.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Capstone"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ProfilePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="profileImage" Stretch="Uniform" Grid.Row="0" Grid.Column="0" Source="/misc/pain.jpg" Margin="10"/>
        <Border Margin="10" Grid.Row="1" Grid.Column="0" BorderThickness="5" CornerRadius="2" BorderBrush="Black">
            <TextBlock x:Name="profileBio" Background="Black" Foreground="White" FontSize="20" TextWrapping="Wrap">
                Sample text
            </TextBlock>
        </Border>

        <Border Margin="10" Grid.RowSpan="2" Grid.Column="1" BorderThickness="5" CornerRadius="2" BorderBrush="Black">
            <TextBlock x:Name="profileComments" Background="Black" Foreground="White" FontSize="20" TextWrapping="Wrap">
                Sample text for reviews done
            </TextBlock>
        </Border>

    </Grid>
</Page>
